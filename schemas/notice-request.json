{
  "$id": "https://api.clearlydefined.io/schemas/notice-request.json#",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "noticeRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["coordinates"],
  "properties": {
    "coordinates": {
      "type": "array",
      "maxItems": 15000,
      "items": { "type": "string" },
      "errorMessage": {
        "type": "coordinates type must be an array"
      }
    },
    "renderer": {
      "enum": ["text", "json", "html", "template"],
      "description": "Name of the renderer to use",
      "errorMessage": {
        "type": "renderer must be a string"
      }
    },
    "options": {
      "type": "object",
      "description": "Options to be given to the renderer",
      "maxProperties": 20,
      "errorMessage": {
        "type": "options must be an object",
        "maxProperties": "Too many options provided (max: 20)"
      }
    }
  },
  "errorMessage": {
    "type": "A notice request must be an object",
    "additionalProperties": "A notice request can only contain coordinates, renderer, and options"
  }
}
